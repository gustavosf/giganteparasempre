<div class="portfolio-page">
	<div class="portfolio-box" isotope>

		<div class="project-post aside-post">
			<div class="inner-post">
				<div class="post-content">
					<h2>Galeria</h2>
					<p>A história da reforma do Gigante através dos olhos dos nossos colaboradores</p>
				</div>
			</div>
		</div>

		<% @albuns.each do |album| %>
			<div class="project-post" anchor data-href="<%= gallery_path + '/' + album.slug %>">
				<img src="<%= album.host_thumbs+ '/' + album.items.first.basename %>">
				<div class="title"><%= album.title %></div>
			</div>
		<% end %>

	</div>
</div>