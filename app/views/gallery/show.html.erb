<div class="portfolio-page">
	<div class="portfolio-box" isotope infinitescroll data-is-template="gallery-image-tmpl">
		<div class="project-post aside-post">
			<div class="inner-post">
				<div class="post-content">
					<h2><%= @album.title %></h2>
					<p><%= @album.description %></p>
				</div>
			</div>
		</div>
	</div>
</div>

<nav id="page_nav">
  <a href="<%= request.original_url %>/page/2"></a>
</nav>

<script id="gallery-image-tmpl" type="text/x-jsrender">
  <div class="project-post">
  	<img src="<%= @album.host_thumbs %>/{{:basename}}">
  	<div class="hover-box">
  		<div class="project-title">
  			<h2>{{:author}}</h2>
  			<span>{{:date}}</span>
  		</div>
  		<ul class="project-links">
  			<!--<li><a href="javascript:;"><i class="fa fa-heart"></i></a></li>-->
  			<li><a href="http://facebook.com{{:link}}" target="_blank"><i class="fa fa-arrow-right"></i></a></li>
  			<li><a href="<%= @album.host %>/{{:basename}}" class="zoom-image" title="{{:description}}"><i class="fa fa-search"></i></a></li>
  		</ul>
  	</div>
  </div>
</script>