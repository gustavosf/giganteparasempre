<div class="single-project">

	<div class="single-box">
		<div class="single-box-content">
			<div class="flexslider">
				<ul class="slides">
					<% @post.images.each do |image| %>
						<li>
							<%= image_tag image %>
						</li>
					<% end %>
				</ul>
			</div>
			<div class="project-post-content">
				<div class="project-text">
					<h1><%= @post.title %></h1>
					<%= @post.html or markdown(@post.content) %>
				</div>
				<div class="comment-section">
					<div class="fb-comments" data-width="100%" data-href="<%= request.original_url %>" data-numposts="5" data-colorscheme="light" mobile="false"></div>
				</div>
			</div>
		</div>
		<div class="sidebar">
			<div class="post-info">
				<h1>Informações</h1>
				<ul>
					<li>
						<% @post.authors.each do |author| %>
							<!-- <span><i class="fa fa-user"></i></span><%= author['name'] %><br> -->
							<a href="http://fb.com/<%= author['facebook'] %>"><img class="author" src="//graph.facebook.com/<%= author['facebook'] %>/picture?height=25&type=normal&width=25"/></a><a href="#" tooltip title="<%= author['role'] %>"><%= author['name'] %></a>
							<br>
						<% end  %>
					</li>
					<li>
						<span><i class="fa fa-heart"></i></span><%= @post.likes %> likes
					</li>
					<li>
						<span><i class="fa fa-calendar"></i></span><a href="<%= request.original_url %>"><%= l @post.published_at, :format => "%e/%b/%Y, %H:%M" %></a>
					</li>
					<!--
					<li>
						<span><i class="fa fa-link"></i></span><a href="<%= request.original_url %>"><%= @post.get_slug %></a>
					</li>
					-->
				</ul>
			</div>
			<div class="tags-box">
				<h1>Tags</h1>
				<ul>
					<% @post.tags.each do |tag| %>
						<li>
							<a href="#"><%= tag %></a>
						</li>
					<% end %>
				</ul>
			</div>
			<div class="archives-sidebar">
				<h1>Arquivo</h1>
				<ul>
					<li><a href="#">Dezembro 2014 <span>(23)</span></a></li>
					<li><a href="#">Novembro 2014 <span>(12)</span></a></li>
					<li><a href="#">Março 2014 <span>(5)</span></a></li>
					<li><a href="#">Setembro 2013 <span>(10)</span></a></li>
					<li><a href="#">Abril 2013 <span>(4)</span></a></li>
					<li><a href="#">Janeiro 2013 <span>(20)</span></a></li>
				</ul>
			</div>
		</div>
	</div>
</div>