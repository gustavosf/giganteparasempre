<script id="photo-gallery-tmpl" type="text/x-jsrender">
  <div class="project-post">
    <img src="<%= Rails.application.config.assets_host %>albuns/thumbs/{{:album_slug}}/{{:basename}}">
    <div class="hover-box">
      <div class="project-title">
        <h2>{{:author}}</h2>
        <span>{{:date}}</span>
      </div>
      <ul class="project-links">
        <!--<li><a href="javascript:;"><i class="fa fa-heart"></i></a></li>-->
        <li><a href="http://facebook.com{{:link}}" target="_blank"><i class="fa fa-arrow-right"></i></a></li>
        <li><a href="<%= Rails.application.config.assets_host %>albuns/full/{{:album_slug}}/{{:basename}}" class="zoom-image" title="{{:description}}"><i class="fa fa-search"></i></a></li>
      </ul>
    </div>
  </div>
</script>

<script id="Photo-tmpl" type="text/x-jsrender">
  <div class="blog-post photo-post">
    <div class="inner-post">
      <img src="<%= Rails.application.config.assets_host %>albuns/thumb/{{:album_slug}}/{{:basename}}"/>
      <a class="zoom" href="<%= Rails.application.config.assets_host %>albuns/full/{{:album_slug}}/{{:basename}}">+</a>
    </div>
  </div>
</script>

<script id="Video-tmpl" type="text/x-jsrender">
  <div class="blog-post video-post">
    <div class="inner-post">
      <div class="lazyYT" data-youtube-id="{{:_id}}" data-ratio="16:9">Carregando...</div>
      <div class="post-content">
        <h2><a href="http://youtu.be/{{:_id}}" target="_blank">{{:title}}</a></h2>
        <p>{{:description}}</p>
        <ul class="post-tags">
          <li><a href="#"><i class="fa fa-heart"></i>{{:likeCount}} curtidas</a></li>
          <li><a href="#"><i class="fa fa-comment"></i>{{:commentCount}} comentÃ¡rios</a></li>
          <li><a href="#"><i class="fa fa-calendar"></i>{{:uploaded}}</a></li>
        </ul>
      </div>
    </div>
  </div>
</script>

<script id="Link-tmpl" type="text/x-jsrender">
  <div class="blog-post image-post">
    <div class="inner-post {{:group}}">
      <img src="<%= Rails.application.config.assets_host %>{{:image}}">
      <div class="post-content">
        <h2><a href="{{:link}}" target="_blank">{{:title}}</a></h2>
        {{if headline}}
          <p>{{:headline}}</p>
        {{/if}}
        <ul class="post-tags">
          <!--<li><a href="#"><i class="fa fa-heart"></i>163 likes</a></li>-->
          <!--<li><a href="#"><i class="fa fa-comment"></i>3 comments</a></li>-->
          <li><a href="#"><i class="fa fa-calendar"></i>{{:date}}</a></li>
        </ul>
      </div>
    </div>
  </div>
</script>

<script id="Post-tmpl" type="text/x-jsrender">
  <div class="blog-post gallery-post">
    <div class="inner-post">
      <div class="flexslider">
        <ul class="slides">
          {{for images}}
            <li>
              <img src="{{>#data}}" />
            </li>
          {{/for}}
        </ul>
      </div>
      <div class="post-content">
        <h2><a href="/content/{{:slug}}">{{:title}}</a></h2>
        <p>{{:headline}}</p>
        <ul class="post-tags">
          <li><a href="#"><i class="fa fa-heart"></i>{{:likes}} likes</a></li>
          <li><a href="#"><i class="fa fa-comment"></i>{{:comments}} comments</a></li>
          <li><a href="#"><i class="fa fa-calendar"></i>{{:published_at}}</a></li>
        </ul>
      </div>              
    </div>
  </div>
</script>